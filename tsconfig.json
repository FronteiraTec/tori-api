{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types",
        ],

        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "../**/*.ts"
    ]
}